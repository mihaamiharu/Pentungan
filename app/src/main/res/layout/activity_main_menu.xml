<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainMenu"
    android:orientation="vertical">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" \n
         TOMBOL DARURAT"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:gravity="center"

        >


        <Button
            android:id="@+id/push_kebakaran"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="50px"
            android:background="@drawable/round_button"
            android:onClick="push_kebakaran"
            android:padding="15dp"
            android:text="P Kebakaran"
            android:textColor="#FFFFFF" />


        <LinearLayout
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/push_polisi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="50px"
            android:background="@drawable/round_button"
            android:onClick="push_polisi"
            android:padding="15dp"
            android:text="Polisi"

            android:textColor="#FFFFFF" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center">


        <Button
            android:id="@+id/push_ambulance"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/round_button"
            android:onClick="push_ambulance"
            android:padding="15dp"
            android:text="Ambulance"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/push_sar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/round_button"
            android:onClick="push_sar"
            android:padding="15dp"
            android:text="Badan SAR"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</LinearLayout>